<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/acceptMatchLayout"
    android:layout_width="350dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:layout_marginTop="-150dp"
    android:visibility="gone"
    android:background="@drawable/default_rectangle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         >
    <TextView
        android:id="@+id/acceptMatchName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/accept_x_match"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_18pt_bold"
        android:gravity="center"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:layout_gravity="bottom">
        <ImageView
            android:id = "@+id/acceptMatchButton"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:layout_marginRight="175dp"
            android:background="@drawable/make_match"
            />
        <ImageView
            android:id = "@+id/declinedMatchButton"
            android:layout_width="60dp"
            android:layout_height="55dp"
            android:background="@drawable/discard_match"
            />

    </LinearLayout>


    </LinearLayout>

</FrameLayout>