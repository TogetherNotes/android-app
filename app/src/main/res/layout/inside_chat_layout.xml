<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:background="@color/blue"
    tools:context=".ChatFragment"
    android:paddingTop="20dp"
    >

    <!-- Logo -->
    <include layout="@layout/logo_reusable"
       />

    <!-- Contenedor del nombre y el botón de eventos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-35dp">

        <TextView
            android:id="@+id/usernameChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/inter_18pt_bold"
            android:text=""
            android:layout_gravity="center|top"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp" />

        <ImageView
            android:id="@+id/createEventButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/calendar_icon_event"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <include layout="@layout/create_user_event" />
    </LinearLayout>

    <!-- Contenedor principal -->
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Lista de mensajes -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/messageContainer"
            android:layout_alignParentTop="true"/>


        <!-- Contenedor del input y botón -->
        <LinearLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:background="@drawable/container_border"
            android:layout_marginBottom="10dp">

            <!-- Input de mensaje -->
            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/write_message"
                android:padding="10dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:background="@color/transparent"
                android:textSize="16sp"/>

            <!-- Botón de enviar -->
            <ImageView
                android:background="@drawable/send_icono"
                android:id="@+id/sendButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="@string/send"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="8dp"
                android:backgroundTint="@color/gold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
