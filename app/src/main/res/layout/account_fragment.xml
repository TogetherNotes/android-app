<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:id="@+id/account_settings"
    tools:context=".AccountFragment">

    <!-- Logo reusable -->
    <include
        layout="@layout/logo_reusable" />

    <!-- Título "Settings" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/inter_18pt_bold"
        android:text="@string/settings"
        android:layout_gravity="center|top"
        android:textColor="@color/white"
        android:layout_marginTop="-20dp" />

    <!-- Línea divisoria -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gold"
        android:layout_marginTop="10dp"/>

    <!-- Contenedor para el perfil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <!-- Nombre de usuario -->
        <ImageView
            android:id ="@+id/user_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aimad Aisa"
            android:textSize="24sp"
            android:fontFamily="@font/inter_18pt_bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <!-- Categoría de música -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textSize="18sp"
            android:fontFamily="@font/inter_18pt_bold"
            android:textColor="@color/gold"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="-40dp">

        <ImageView
            android:id="@+id/ajustes_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ajustes" />
        <ImageView
            android:id="@+id/camera_button"
            android:layout_marginTop="50dp"
            android:layout_width="115dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/camara_icon" />
        <ImageView
            android:id="@+id/edit_user_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@drawable/edit_user_info" />

    </LinearLayout>
    <!-- TogetherNotes -->

    <include
        layout="@layout/edit_user_activity" />

</LinearLayout>