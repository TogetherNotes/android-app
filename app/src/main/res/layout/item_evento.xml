<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/event_chat_border"
    android:padding="8dp">

    <!-- ImageView para la imagen -->
    <ImageView
        android:id="@+id/imagenEvento"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp" />

    <!-- TextView para el título -->
    <TextView
        android:id="@+id/tituloEvento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/blue"
        android:text="Título del evento"
        app:layout_constraintStart_toEndOf="@id/imagenEvento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />
    <TextView
        android:id="@+id/tipoEvento"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/blue"
        android:text="Tipo de evento"
        app:layout_constraintStart_toEndOf="@id/imagenEvento"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>