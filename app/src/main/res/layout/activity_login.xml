<!-- Campo TogetherNotes -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/blue">

    <!-- Contenedor horizontal para el logo y el título -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="-20dp"
        android:layout_gravity="center_horizontal">

        <!-- Logo (ImageView) -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_simple" />

        <!-- Título (TextView) -->
        <TextView
            android:id="@+id/tituloApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TogetherNotes"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="-15dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Contenedor vertical para los campos de entrada y el botón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="105dp"
        android:orientation="vertical">

        <!-- Campo de correo electrónico -->
        <EditText
            android:id="@+id/mailLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:fontFamily="@font/inter_18pt_bold"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/hint_color" />

        <!-- Campo de contraseña -->
        <EditText
            android:id="@+id/passwordLogin"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            android:fontFamily="@font/inter_18pt_bold"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColorHint="@color/hint_color" />

        <!-- Botón CREAR COMPTE -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp">

            <!-- Fondo con borde -->
            <ImageView
                android:id="@+id/contine_restaurant_button"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/button_border" />

            <!-- Texto sobre el fondo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/contine"
                android:textColor="@color/black" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>