<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente -->
            <stroke
                android:width="2dp"
                android:color="@color/grey_hint" /> <!-- Borde gris -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados (opcional) -->
        </shape>
    </item>

    <!-- Estado no seleccionado -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fondo transparente -->
            <stroke
                android:width="2dp"
                android:color="@android:color/darker_gray" /> <!-- Borde gris oscuro -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados (opcional) -->
        </shape>
    </item>
</selector>