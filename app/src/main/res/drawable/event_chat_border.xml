<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4D000000" /> <!-- Color de la sombra (negro con transparencia) -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Capa Principal (Fondo del RectÃ¡ngulo) -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/chat_grey" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#AAAAAA" />
        </shape>
    </item>
</layer-list>